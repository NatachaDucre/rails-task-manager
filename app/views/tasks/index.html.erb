<h1>My to do list</h1>

<div class="container">
<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= link_to task.name, task_path(task) %><%=  %> : <%= task.description %>
      <%= link_to "Edit", edit_task_path(task) %>
      <%= link_to "Delete", task_path(task),
          method: :delete,
          data: { confirm: "Are you sure?" } %>
    </li>
  <% end %>
</ul>

<%= link_to "Add a new task", new_task_path %>

</div>
